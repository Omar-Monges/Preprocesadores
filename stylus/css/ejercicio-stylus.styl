fuente1 = 'Lato', sans-serif
fuente2 = 'Oswald', sans-serif
color-primario = #333333
color-secundario = #8841DA
color-claro = #ffffff
contenedor(dis, wh, isShadow)
	display: dis
	width: wh
	margin: 0 auto
	align-items: center
	// padding: 30px 0
	background-color: color-claro
	if(isShadow)
		box-shadow: 0 20px 33px 0 rgba(0, 0, 0, 0.20)
*
	box-sizing: border-box

body
	margin: 0
	font-family: fuente1
	color: color-primario

.buscador
	width: 100%
	height: 250px
	padding: 100px
	background-image: url("../images/cover.jpg")
	background-size: cover
	text-align: center
	&__input
		width: 75%
		height: 60px
		padding: 20px
		border: none
		border-radius: 30px
		font-size: 25px
.encabezado--con-filtros
	contenedor(flex, 90%, false)
	h2
		width: 70%
		// margin-top: 10px
		text-transform: uppercase
		font-weight: 600
		font-size: 50px
		font-family: fuente2
	.filtros
		width: 30%
		text-align: right
		&__container
			height: 75px
			padding: 20px
			// margin-left: auto
			span
				text-transform: uppercase
				font-family: fuente2
			a
				margin-left: 20px
				font-size: 25px
				color: color-primario
				text-decoration: none
			contenedor(inline-block, auto, true)
.contenido
	margin-bottom: 40px
	justify-content: space-evenly
	contenedor(flex, 90%, false)
.caja
	max-width: 400px
	contenedor(block, 90%, true)
	&__contenido
		padding: 20px
		background-color: color-claro
		span
			text-transform: uppercase
			font-family: fuente2
			color: color-secundario
		h3
			text-transform: uppercase
			font-weight: normal
			font-family: fuente2